@model MutaEngineering.ViewModels.LoginViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Config

@{
    var isRtl = System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    ViewData["Title"] = isRtl ? "تسجيل الدخول" : "Sign in";

    bool hasGoogle = !string.IsNullOrWhiteSpace(Config["Authentication:Google:ClientId"])
                    && !string.IsNullOrWhiteSpace(Config["Authentication:Google:ClientSecret"]);
    bool hasGitHub = !string.IsNullOrWhiteSpace(Config["Authentication:GitHub:ClientId"])
                    && !string.IsNullOrWhiteSpace(Config["Authentication:GitHub:ClientSecret"]);
    bool hasFacebook = !string.IsNullOrWhiteSpace(Config["Authentication:Facebook:AppId"])
                    && !string.IsNullOrWhiteSpace(Config["Authentication:Facebook:AppSecret"]);
}

@section Styles {
    <link rel="stylesheet" href="~/css/home-premium.css" asp-append-version="true" />
    <style>
        .login-page-bg {
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000" fill="%23f1f5f9"><rect width="1000" height="1000"/><path d="M0 0h1000v1000H0z" fill="none"/><g opacity="0.05"><path d="M500 0L0 500h1000L500 0z" fill="%231e293b"/></g></svg>'); 
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px);
            border-radius: var(--radius-xl);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.5);
            overflow: hidden;
            width: 100%;
            max-width: 1000px;
            display: flex;
            flex-direction: column;
        }

        @@media (min-width: 992px) {
            .login-card {
                flex-direction: row;
                min-height: 600px;
            }
        }

        .login-visual {
            background: linear-gradient(145deg, var(--muta-maroon) 0%, #4a0418 100%);
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: relative;
            overflow: hidden;
            flex: 1;
        }
        
        .login-visual::before {
             content: '';
             position: absolute;
             top: 0; left: 0; width: 100%; height: 100%;
             background: url('/img/pattern-overlay.png'); /* If exists, otherwise transparent */
             opacity: 0.1;
        }

        .login-visual-circle {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background: rgba(255,255,255,0.05);
            position: absolute;
            top: -50px;
            right: -50px;
        }

        .login-form-wrapper {
            flex: 1.2;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-floating-custom .form-control {
            border: none;
            border-bottom: 2px solid #e2e8f0;
            border-radius: 0;
            padding: 10px 0;
            background: transparent;
            box-shadow: none;
        }

        .form-floating-custom .form-control:focus {
             border-color: var(--muta-maroon);
        }

        .form-floating-custom label {
            padding-left: 0;
            color: #94a3b8;
        }

        .form-floating-custom .form-control:focus ~ label,
        .form-floating-custom .form-control:not(:placeholder-shown) ~ label {
             transform: scale(0.85) translateY(-25px) translateX(0);
        }

        .btn-social-icon {
            width: 100%;
            border-radius: 50px;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            font-size: 0.9rem;
            transition: all 0.3s;
        }

        .btn-google { color: #DB4437; border: 1px solid #DB4437; background: transparent; }
        .btn-google:hover { background: #DB4437; color: white; }

        .btn-github { color: #333; border: 1px solid #333; background: transparent; }
        .btn-github:hover { background: #333; color: white; }
        
        .btn-facebook { color: #4267B2; border: 1px solid #4267B2; background: transparent; }
        .btn-facebook:hover { background: #4267B2; color: white; }

        .auth-divider {
            display: flex;
            align-items: center;
            text-align: center;
            color: #94a3b8;
            margin: 30px 0;
        }
        .auth-divider::before,
        .auth-divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e2e8f0;
        }
        .auth-divider span {
            padding: 0 10px;
            font-size: 0.9rem;
        }

    </style>
}

<div class="login-page-bg">
    <div class="login-card">
        
        <!-- Left Visual Side -->
        <div class="login-visual">
            <div class="login-visual-circle"></div>
            <div style="z-index: 2;">
                <img src="~/img/logo2.jpg" class="rounded-circle shadow-lg mb-4" style="width: 100px; height: 100px; border: 4px solid rgba(255,255,255,0.2);" alt="Logo" />
                <h2 class="fw-bold mb-2">@(isRtl ? "مرحباً بك مجدداً" : "Welcome Back!")</h2>
                <p class="opacity-75">
                    @(isRtl 
                    ? "سجل الدخول للمتابعة إلى بوابة كلية الهندسة في جامعة مؤتة." 
                    : "Sign in to continue to the Mutah University Faculty of Engineering portal.")
                </p>
                <div class="mt-4">
                    <small class="d-block text-white-50 mt-5">© @DateTime.Now.Year Mutah University</small>
                </div>
            </div>
        </div>

        <!-- Right Form Side -->
        <div class="login-form-wrapper">
            <h3 class="fw-bold mb-4" style="color: var(--dark-surface);">@ViewData["Title"]</h3>

            <form asp-action="Login" method="post" class="needs-validation" novalidate>
                <input type="hidden" name="returnUrl" value="@(ViewBag.ReturnUrl ?? "")" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm rounded-3 mb-4"></div>

                <div class="form-floating-custom mb-4">
                    <input asp-for="PhoneNumber" class="form-control" placeholder=" " required />
                    <label asp-for="PhoneNumber">@((isRtl ? "رقم الهاتف أو الاسم" : "Phone or Name"))</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="form-floating-custom mb-5">
                    <input asp-for="Password" type="password" class="form-control" placeholder=" " required />
                    <label asp-for="Password">@((isRtl ? "كلمة المرور" : "Password"))</label>
                    <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                </div>

                <button type="submit" class="btn-modern btn-modern-primary w-100 shadow-lg">
                    @((isRtl ? "تسجيل الدخول" : "Sign in"))
                </button>
            </form>

            <div class="auth-divider">
                <span>@((isRtl ? "أو تابع باستخدام" : "Or continue with"))</span>
            </div>

            <div class="row g-2">
                <div class="col-4">
                    @if (hasGoogle) {
                        <form asp-action="ExternalLogin" method="post" class="h-100">
                             <input type="hidden" name="provider" value="Google" />
                             <button type="submit" class="btn-social-icon btn-google">
                                 <i class="bi bi-google"></i> <span class="d-none d-md-inline">Google</span>
                             </button>
                        </form>
                    } else {
                         <button class="btn-social-icon btn-google opacity-50" disabled><i class="bi bi-google"></i></button>
                    }
                </div>
                <div class="col-4">
                    @if (hasGitHub) {
                        <form asp-action="ExternalLogin" method="post" class="h-100">
                             <input type="hidden" name="provider" value="GitHub" />
                             <button type="submit" class="btn-social-icon btn-github">
                                 <i class="bi bi-github"></i> <span class="d-none d-md-inline">GitHub</span>
                             </button>
                        </form>
                    } else {
                         <button class="btn-social-icon btn-github opacity-50" disabled><i class="bi bi-github"></i></button>
                    }
                </div>
                <div class="col-4">
                    @if (hasFacebook) {
                        <form asp-action="ExternalLogin" method="post" class="h-100">
                             <input type="hidden" name="provider" value="Facebook" />
                             <button type="submit" class="btn-social-icon btn-facebook">
                                 <i class="bi bi-facebook"></i> <span class="d-none d-md-inline">Facebook</span>
                             </button>
                        </form>
                    } else {
                         <button class="btn-social-icon btn-facebook opacity-50" disabled><i class="bi bi-facebook"></i></button>
                    }
                </div>
            </div>

            <p class="text-center mt-5 mb-0 text-muted">
                @((isRtl ? "لا تملك حسابًا؟" : "Don’t have an account?"))
                <a asp-action="SignUp" class="fw-bold text-decoration-none" style="color: var(--muta-maroon);">
                    @((isRtl ? "أنشئ حسابًا جديداً" : "Create one now"))
                </a>
            </p>
        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        (function () {
          const forms = document.querySelectorAll('.needs-validation');
          Array.from(forms).forEach(f => {
            f.addEventListener('submit', e => {
              if (!f.checkValidity()) { e.preventDefault(); e.stopPropagation(); }
              f.classList.add('was-validated');
            }, false);
          });
        })();
    </script>
}
