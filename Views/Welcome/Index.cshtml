@{
    var isRtl = System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    ViewData["Title"] = isRtl ? "أهلًا بك" : "Welcome";
}

<div class="welcome-hero">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-12 col-lg-6 text-center text-lg-start">
                <h1 class="display-5 fw-bold mb-3">
                    @(isRtl ? "كلية الهندسة – جامعة مؤتة" : "Faculty of Engineering – Mutah University")
                </h1>
                <p class="lead text-muted mb-4">
                    @(isRtl ? "بوابتك للأقسام والهيئة التدريسية والخطط والامتحانات." :
                                        "Your portal for departments, faculty, study plans, and exams.")
                </p>
                <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-dark btn-lg px-4">
                        @(isRtl ? "تسجيل الدخول" : "Login")
                    </a>
                    <a asp-controller="Account" asp-action="SignUp" class="btn btn-primary btn-lg px-4">
                        @(isRtl ? "حساب جديد" : "Sign up")
                    </a>
                </div>

                <div class="d-flex gap-2 justify-content-center justify-content-lg-start mt-4">
                    <a class="btn btn-outline-light btn-sm" href="?culture=ar-JO&ui-culture=ar-JO">عربي</a>
                    <a class="btn btn-outline-light btn-sm" href="?culture=en-US&ui-culture=en-US">English</a>
                </div>
            </div>

            <div class="col-12 col-lg-6 d-none d-lg-block">
                <div class="welcome-illustration-wrap">
                    <img src="~/img/illustrations/Learning-amico.svg" alt="Illustration"
                         class="img-fluid welcome-illustration"
                         onerror="this.style.display='none'; document.getElementById('wel-fallback').style.display='block';" />
                    <div id="wel-fallback" class="text-center" style="display:none;">
                        <div class="illust-circle mx-auto mb-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- نهاية الـ Hero -->
<!-- FOOTER هنا خارج الـ Hero -->
<footer class="site-footer mt-auto">
    <div class="container footer-grid">
        <div>
            <h6 class="fw-bold mb-2">
                @(isRtl ? "كلية الهندسة – جامعة مؤتة" : "Faculty of Engineering – Mutah University")
            </h6>
            <p class="footer-meta">
                @(isRtl ? "بوابتك الرسمية للأقسام، الخطط الدراسية، أعضاء هيئة التدريس، والمختبرات."
                                : "Your official portal for departments, study plans, faculty members, and laboratories.")
            </p>
            <p class="footer-meta mb-0">&copy; @DateTime.Now.Year — Mutah University</p>
        </div>

        <div>
            <h6 class="fw-bold mb-2">@((isRtl ? "روابط سريعة" : "Quick Links"))</h6>
            <ul class="list-unstyled">
                <li><a class="footer-link" asp-controller="Home" asp-action="Index">@((isRtl ? "الرئيسية" : "Home"))</a></li>
                <li><a class="footer-link" asp-controller="Departments" asp-action="Index">@((isRtl ? "الأقسام" : "Departments"))</a></li>
                <li><a class="footer-link" asp-controller="StudyPlans" asp-action="Index">@((isRtl ? "الخطط الدراسية" : "Study Plans"))</a></li>
                <li><a class="footer-link" asp-controller="Home" asp-action="Privacy">@((isRtl ? "الخصوصية" : "Privacy"))</a></li>
            </ul>
        </div>

        <div>
            <h6 class="fw-bold mb-2">@((isRtl ? "تواصل معنا" : "Contact Us"))</h6>
            <ul class="list-unstyled">
                <li>
                    <i class="bi bi-telephone me-1"></i>
                    <a class="footer-link" href="tel:+962123456789">+962 1 234 567 89</a>
                </li>
                <li>
                    <i class="bi bi-envelope me-1"></i>
                    <a class="footer-link" href="mailto:engineering@mutah.edu.jo">engineering@mutah.edu.jo</a>
                </li>
                <li><i class="bi bi-geo-alt me-1"></i>@(isRtl ? "الكرك - الأردن" : "Karak, Jordan")</li>
            </ul>
        </div>
    </div>
</footer>
