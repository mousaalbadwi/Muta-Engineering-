@{
    var isRtl = System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    ViewData["Title"] = isRtl ? "أهلًا بك" : "Welcome";
}

<!-- Language Switcher Specific for this page Layout -->
<div class="welcome-lang-corner animate-in delay-500">
    @if (isRtl)
    {
            <a href="?culture=en-US&ui-culture=en-US" class="btn-lang-glass">
                <span>English</span>
                <i class="bi bi-globe2"></i>
            </a>
    }
    else
    {
            <a href="?culture=ar-JO&ui-culture=ar-JO" class="btn-lang-glass">
                <span>عربي</span>
                <i class="bi bi-globe2"></i>
            </a>
    }
</div>

<div class="welcome-section">
    <!-- Decorative Background -->
    <div class="welcome-bg-shape"></div>

    <div class="container welcome-container">
        <div class="row align-items-center">

            <!-- Text Column -->
            <div class="col-12 col-lg-6 welcome-text-col">
                <span class="welcome-kicker animate-in">
                    @(isRtl ? "جامعة مؤتة" : "Mutah University")
                </span>

                <h1 class="welcome-title animate-in delay-100">
                    @(isRtl ? "كلية الهندسة" : "Faculty of Engineering")
                </h1>

                <p class="welcome-desc animate-in delay-200">
                    @(isRtl
                            ? "بوابتك الرقمية الشاملة للوصول إلى الأقسام الأكاديمية، والخطط الدراسية، والخدمات الطلابية وأعضاء الهيئة التدريسية."
                            : "Your comprehensive digital portal for academic departments, study plans, student services, and faculty members.")
                </p>

                <div class="welcome-btn-wrapper animate-in delay-300">
                    <a asp-controller="Account" asp-action="Login" class="btn-welcome-primary">
                        @(isRtl ? "تسجيل الدخول" : "Login")
                        <i class="bi bi-arrow-@(isRtl ? "left" : "right")-short fs-4"></i>
                    </a>

                    <a asp-controller="Account" asp-action="SignUp" class="btn-welcome-outline">
                        @(isRtl ? "إنشاء حساب" : "Create Account")
                    </a>
                </div>
            </div>

            <!-- Image Column -->
            <div class="col-12 col-lg-6">
                <div class="welcome-image-col animate-in delay-300">
                    <div class="welcome-img-glass">
                        <img src="~/img/logo.jpg" 
                             alt="Learning Illustration" 
                             class="welcome-img-main"
                             onerror="this.src='https://via.placeholder.com/600x400/f8f9fa/7a1e2d?text=Mutah+University'" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
