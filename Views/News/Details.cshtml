@using System.Globalization
@model MutaEngineering.Models.NewsItem
@{
    var isRtl = CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    string T(string ar, string en) => isRtl ? ar : en;
    ViewData["Title"] ??= isRtl ? Model.TitleAr : Model.TitleEn;
    var title = isRtl ? Model.TitleAr : Model.TitleEn;
    var body = isRtl ? Model.BodyAr : Model.BodyEn;
    var img = Url.Content(Model.ImagePath ?? "~/img/news/mutahbox.jpg");
}
<section class="container after-hero">
    <h2 class="h4 mb-3">@title</h2>

    <div class="card border-0 shadow-sm rounded-4">
        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
        {
            <img src="@img" class="card-img-top rounded-top-4" alt="@title" style="max-height:380px;object-fit:cover" />
        }
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <span class="badge text-bg-secondary">@Model.Category</span>
                <small class="text-muted"><i class="bi bi-clock me-1"></i>@Model.PublishDate.ToString("dd/MM/yyyy HH:mm")</small>
            </div>
            @if (!string.IsNullOrWhiteSpace(body))
            {
                <div style="white-space:pre-line">@body</div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-right-circle me-1"></i>@T("رجوع للقائمة", "Back to list")</a>
    </div>
</section>
