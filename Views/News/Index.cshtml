@using System.Globalization
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Rendering
@using MutaEngineering.Models
@model List<NewsItem>

@{
    var isRtl = CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    string T(string ar, string en) => isRtl ? ar : en;
    ViewData["Title"] ??= T("الأخبار والفعاليات", "News & Events");

    // ✅ Fallback للصلاحيات: ViewBag أو Session
    var isAdmin = ((bool?)ViewBag.IsAdmin == true) || (Context.Session.GetString("UserRole") == "Admin");

    // ✅ حماية من null
    var categories = ViewBag.Categories as IEnumerable<SelectListItem> ?? new List<SelectListItem>();

    int? currentCat = null; bool currentPublishedOnly = true; string currentQ = "";
    if (ViewBag.Filters != null)
    {
        currentCat = (int?)ViewBag.Filters.category;
        currentPublishedOnly = (bool)ViewBag.Filters.publishedOnly;
        currentQ = (string)(ViewBag.Filters.q ?? "");
    }
}

<section class="container after-hero">
    <h2 class="h4 mb-3">@ViewData["Title"]</h2>

    @if (TempData["Ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }

    @if (isAdmin)
    {
        <div class="mb-3">
            <a class="btn btn-primary"
               asp-action="Create"
               asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
                <i class="bi bi-plus-lg me-1"></i>@T("إضافة خبر", "Add News")
            </a>
        </div>
    }

    <form method="get" class="row g-2 g-md-3 align-items-end mb-3">
        <div class="col-12 col-md-3">
            <label class="form-label small">@T("التصنيف", "Category")</label>
            <select name="category" class="form-select" onchange="this.form.submit()">
                <option value="">@T("الكل", "All")</option>
                @foreach (var c in categories)
                {
                    <option value="@c.Value" selected="@(currentCat?.ToString() == c.Value ? "selected" : null)">@c.Text</option>
                }
            </select>
        </div>

        <div class="col-12 col-md-2">
            <label class="form-label small">@T("منشور فقط", "Published only")</label>
            <select name="publishedOnly" class="form-select" onchange="this.form.submit()">
                <option value="true" selected="@(currentPublishedOnly ? "selected" : null)">@T("نعم", "Yes")</option>
                <option value="false" selected="@(!currentPublishedOnly ? "selected" : null)">@T("لا", "No")</option>
            </select>
        </div>

        <div class="col-12 col-md-5">
            <label class="form-label small">@T("بحث بالعنوان/النص", "Search title/body")</label>
            <input name="q" class="form-control" value="@currentQ" />
        </div>

        <div class="col-12 col-md-2 d-grid">
            <button class="btn btn-primary" type="submit"><i class="bi bi-search me-1"></i>@T("بحث", "Search")</button>
        </div>
    </form>

    <div class="row g-3 g-md-4">
        @if (!Model.Any())
        {
            <div class="col-12"><div class="alert alert-info mb-0">@T("لا يوجد نتائج.", "No results.")</div></div>
        }
        else
        {
            @foreach (var n in Model)
            {
                var title = isRtl ? n.TitleAr : n.TitleEn;
                var body = isRtl ? n.BodyAr : n.BodyEn;
                var img = Url.Content(n.ImagePath ?? "~/img/news/mutahbox.jpg"); // fallback

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 position-relative pb-5">
                        <img src="@img" class="card-img-top rounded-top-4" alt="@title"
                             style="height:180px;object-fit:cover"
                             onerror="this.src='@Url.Content("~/img/mutahbox3.jpeg")';" />
                        <div class="p-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge text-bg-secondary">@n.Category</span>
                                <small class="text-muted"><i class="bi bi-clock me-1"></i>@n.PublishDate.ToString("dd/MM/yyyy")</small>
                            </div>
                            <h5 class="card-title m-0">@title</h5>
                            @if (!string.IsNullOrWhiteSpace(body))
                            {
                                var excerpt = body.Length > 120 ? body.Substring(0, 120) + "..." : body;
                                <p class="card-text text-muted mt-1" style="white-space:pre-line">@excerpt</p>
                            }
                        </div>

                        <a class="stretched-link" asp-action="Details" asp-route-id="@n.Id"></a>

                        @if (isAdmin)
                        {
                            <div class="position-absolute bottom-0 end-0 p-2 d-flex gap-1 admin-actions">
                                <a class="btn btn-sm btn-light border"
                                   asp-action="Edit" asp-route-id="@n.Id"
                                   asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)"
                                   title="Edit" onclick="event.stopPropagation();">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline js-delete-form" onsubmit="event.stopPropagation();">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@n.Id" />
                                    <input type="hidden" name="returnUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                                    <button type="button" class="btn btn-sm btn-light border js-delete-btn" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        (function () {
          document.addEventListener('click', function (ev) {
            const btn = ev.target.closest('.js-delete-btn');
            if (!btn) return; ev.preventDefault(); ev.stopPropagation();
            const form = btn.closest('.js-delete-form'); if (!form) return;

            const rtl = document.documentElement.dir === 'rtl';
            Swal.fire({
              title: rtl ? 'تأكيد الحذف؟' : 'Confirm delete?',
              text:  rtl ? 'لا يمكن التراجع بعد الحذف.' : 'This action cannot be undone.',
              icon: 'warning',
              showCancelButton: true,
              confirmButtonText: rtl ? 'نعم، احذف' : 'Yes, delete',
              cancelButtonText:   rtl ? 'إلغاء' : 'Cancel',
              reverseButtons: rtl,
              customClass: { confirmButton: 'btn btn-danger', cancelButton: 'btn btn-secondary ms-2' },
              buttonsStyling: false
            }).then(res => { if (res.isConfirmed) form.submit(); });
          }, true);
        })();
    </script>
    <style>
        .card .admin-actions {
            z-index: 20;
        }

        .stretched-link::after {
            z-index: 1;
        }

        .admin-actions, .admin-actions * {
            pointer-events: auto !important;
        }
    </style>
}
