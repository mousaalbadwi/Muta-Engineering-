@model MutaEngineering.Models.NewsItem
@{
    var isRtl = System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    ViewData["Title"] = isRtl ? "تعديل خبر" : "Edit News";
}
<section class="container after-hero">
    <h2 class="h4 mb-3">@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        @Html.Partial("_Form", Model)
    </form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
