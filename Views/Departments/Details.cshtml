@model MutaEngineering.Models.Department
@using System.Globalization
@{
    var isRtl = CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;

    string Pick(params string?[] xs) => xs.FirstOrDefault(s => !string.IsNullOrWhiteSpace(s)) ?? "";

    var title = isRtl ? Pick(new[] { Model?.NameAr, Model?.NameEn }) : Pick(new[] { Model?.NameEn, Model?.NameAr });
    var desc = isRtl ? Pick(new[] { Model?.DescriptionAr, Model?.DescriptionEn }) : Pick(new[] { Model?.DescriptionEn, Model?.DescriptionAr });

    var imgPath = !string.IsNullOrWhiteSpace(Model?.ImagePath) ? Url.Content(Model.ImagePath) : Url.Content("~/img/departments/default.jpg");
    bool hasCustomImage = !string.IsNullOrWhiteSpace(Model?.ImagePath);

    var isAdmin = (bool?)ViewBag.IsAdmin == true;

    int facultyCount = ViewBag.FacultyCount is int fc ? fc : 0;
    int examsCount = ViewBag.ExamsCount is int ec ? ec : 0;
    int labsCount = ViewBag.LabsCount is int lc ? lc : 0;

    var initials = new string((title ?? "")
        .Split(' ', StringSplitOptions.RemoveEmptyEntries)
        .Take(2).Select(w => w[0]).ToArray()).ToUpperInvariant();

    ViewData["Title"] = title;
}

<!-- HERO -->
<section class="dept-hero">
    <div class="container py-5">
        <div class="row align-items-center g-4">
            <!-- زوّدنا z-index هنا -->
            <div class="col-12 col-lg-8 position-relative" style="z-index:2">
                <nav aria-label="breadcrumb" class="mb-2">
                    <ol class="breadcrumb small">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@((isRtl ? "الرئيسية" : "Home"))</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Departments" asp-action="Index">@((isRtl ? "الأقسام" : "Departments"))</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@title</li>
                    </ol>
                </nav>

                <h1 class="display-5 fw-bold mb-3 text-dark">@title</h1>

                <p class="lead text-muted mb-0">
                    @if (!string.IsNullOrWhiteSpace(desc))
                    {
                        @desc
                    }
                    else
                    {

                        @(isRtl ? "نبذة القسم ستُضاف قريبًا. يقدم القسم برامج ومختبرات ومشاريع تخرّج متميّزة."
                                            : "Department summary coming soon. Offers quality labs, projects, and learning outcomes.")
                                        }
                </p>

                <!-- شريط الأزرار الجديد -->
                <div class="action-bar mt-4">
                    <a class="btn btn-primary" asp-controller="Faculty" asp-action="Index" asp-route-departmentId="@Model?.Id">
                        <i class="bi bi-people me-1"></i>@(isRtl ? "هيئة التدريس" : "Faculty")
                    </a>
                    <a class="btn btn-outline-primary" asp-controller="Exams" asp-action="Index" asp-route-departmentId="@Model?.Id">
                        <i class="bi bi-card-checklist me-1"></i>@(isRtl ? "الامتحانات" : "Exams")
                    </a>
                    <a class="btn btn-outline-secondary" asp-controller="Exams" asp-action="Archive" asp-route-departmentId="@Model?.Id">
                        <i class="bi bi-archive me-1"></i>@(isRtl ? "الأرشيف" : "Archive")
                    </a>
                    <a class="btn btn-outline-secondary" asp-controller="StudyPlans" asp-action="Index" asp-route-departmentId="@Model?.Id">
                        <i class="bi bi-journal-bookmark me-1"></i>@(isRtl ? "الخطط الدراسية" : "Study Plans")
                    </a>
                    @if (isAdmin)
                    {
                        <a class="btn btn-outline-dark" asp-controller="Departments" asp-action="Edit" asp-route-id="@Model?.Id">
                            <i class="bi bi-pencil-square me-1"></i>@(isRtl ? "تعديل القسم" : "Edit department")
                        </a>
                    }
                </div>
            </div>

            <!-- صورة القسم: خفّضنا z-index حتى ما تغطي الأزرار -->
            <div class="col-12 col-lg-4 d-none d-lg-block">
                <div class="dept-photo card border-0 shadow-sm rounded-4 overflow-hidden position-relative" style="z-index:1">
                    <img src="@imgPath" alt="@title" onerror="this.closest('.dept-photo').classList.add('no-img'); this.remove();" />
                    <div class="no-img-fallback">
                        <div class="avatar">@initials</div>
                        <small class="text-muted">@((isRtl ? "لا توجد صورة" : "No image available"))</small>
                    </div>
                    @if (hasCustomImage)
                    {
                        <span class="badge img-badge rounded-pill text-bg-light">
                            <i class="bi bi-image me-1"></i>@(isRtl ? "صورة القسم" : "Department photo")
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="wave-bottom">
        <svg viewBox="0 0 1440 110" preserveAspectRatio="none"><path d="M0,64L48,69.3C96,75,192,85,288,85.3C384,85,480,75,576,69.3C672,64,768,64,864,69.3C960,75,1056,85,1152,85.3C1248,85,1344,75,1392,69.3L1440,64L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>
    </div>
</section>

<!-- CONTENT -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-12 col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center gap-2 mb-3">
                            <i class="bi bi-stars text-primary fs-5"></i>
                            <h2 class="h5 mb-0">@((isRtl ? "لماذا هذا القسم؟" : "Why this department?"))</h2>
                        </div>
                        <div class="row g-3">
                            <div class="col-12 col-md-6"><div class="hi-tile"><i class="bi bi-cpu"></i><div><strong>@(isRtl ? "مختبرات حديثة" : "Modern labs")</strong><div class="text-muted small">@((isRtl ? "معدات تدريب عملية." : "Hands-on equipment."))</div></div></div></div>
                            <div class="col-12 col-md-6"><div class="hi-tile"><i class="bi bi-mortarboard"></i><div><strong>@(isRtl ? "مشاريع تخرج قوية" : "Capstone projects")</strong><div class="text-muted small">@((isRtl ? "إشراف أكاديمي وشراكات." : "Mentorship & industry links."))</div></div></div></div>
                            <div class="col-12 col-md-6"><div class="hi-tile"><i class="bi bi-diagram-3"></i><div><strong>@(isRtl ? "تنوع مساقات" : "Rich curriculum")</strong><div class="text-muted small">@((isRtl ? "مخرجات تعلم واضحة." : "Clear outcomes."))</div></div></div></div>
                            <div class="col-12 col-md-6"><div class="hi-tile"><i class="bi bi-briefcase"></i><div><strong>@(isRtl ? "فرص سوق العمل" : "Career outlook")</strong><div class="text-muted small">@((isRtl ? "طلب متزايد." : "High demand."))</div></div></div></div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-info-circle text-primary fs-5"></i>
                            <h2 class="h5 mb-0">@((isRtl ? "عن القسم" : "About the department"))</h2>
                        </div>
                        <p class="mb-0">
                            @if (!string.IsNullOrWhiteSpace(desc))
                            {
                                @desc
                            }
                            else
                            {

                                @(isRtl ? "سيتم تحديث النص التعريفي لاحقًا. استعرض الروابط أعلاه." : "Intro will be updated. Use the quick links above.")
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 mb-3">
                    <div class="card-body p-4">
                        <h6 class="mb-3"><i class="bi bi-graph-up-arrow me-1 text-primary"></i>@(isRtl ? "لمحة سريعة" : "At a glance")</h6>
                        <div class="row g-3 text-center">
                            <div class="col-4"><div class="stat"><div class="stat-number">@facultyCount</div><div class="stat-label">@((isRtl ? "أعضاء" : "Faculty"))</div></div></div>
                            <div class="col-4"><div class="stat"><div class="stat-number">@labsCount</div><div class="stat-label">@((isRtl ? "مختبرات" : "Labs"))</div></div></div>
                            <div class="col-4"><div class="stat"><div class="stat-number">@examsCount</div><div class="stat-label">@((isRtl ? "امتحانات" : "Exams"))</div></div></div>
                        </div>
                        <small class="text-muted d-block mt-2">@((isRtl ? "الأرقام تقريبية وقد تختلف حسب الفصل." : "Figures are indicative and may vary by term."))</small>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <h6 class="mb-2"><i class="bi bi-link-45deg me-1 text-primary"></i>@(isRtl ? "روابط مفيدة" : "Useful links")</h6>
                        <div class="d-grid gap-2">
                            <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-grid me-1"></i>@(isRtl ? "كل الأقسام" : "All departments")</a>
                            <a asp-controller="Admissions" asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-mortarboard me-1"></i>@(isRtl ? "القبول والتسجيل" : "Admissions")</a>
                            <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-secondary btn-sm"><i class="bi bi-shield-check me-1"></i>@(isRtl ? "الخصوصية" : "Privacy")</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .dept-hero {
            background: radial-gradient(900px 480px at 10% -20%, #cfe7ff 0%, transparent 65%), radial-gradient(700px 380px at 90% 120%, #e6eaff 0%, transparent 60%), linear-gradient(180deg, #f8fbff, #ffffff);
            border-radius: 0 0 24px 24px;
            position: relative;
        }

        .wave-bottom svg {
            width: 100%;
            height: 110px;
            display: block;
            fill: #fff;
        }

        /* الأزرار داخل الهيرو */
        .action-bar {
            display: flex;
            flex-wrap: wrap;
            gap: .6rem;
        }

            .action-bar .btn {
                white-space: nowrap;
                padding: .6rem .9rem;
                border-radius: 10px;
                box-shadow: 0 6px 16px rgba(13,110,253,.08);
                transition: transform .15s ease, box-shadow .15s ease;
            }

                .action-bar .btn:hover {
                    transform: translateY(-1px);
                    box-shadow: 0 10px 22px rgba(13,110,253,.12);
                }

        /* بطاقة الصورة */
        .dept-photo {
            min-height: 220px;
            background: #fff;
        }

            .dept-photo img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
                filter: saturate(1.02) contrast(1.02);
            }

            .dept-photo .img-badge {
                position: absolute;
                top: .6rem;
                inset-inline-end: .6rem;
                box-shadow: 0 8px 18px rgba(15,23,42,.16);
                backdrop-filter: blur(4px);
            }

            .dept-photo.no-img {
                display: grid;
                place-items: center;
                padding: 1.25rem;
            }

            .dept-photo .no-img-fallback {
                display: none;
                text-align: center;
            }

            .dept-photo.no-img .no-img-fallback {
                display: block;
            }

            .dept-photo .avatar {
                width: 92px;
                height: 92px;
                border-radius: 50%;
                display: grid;
                place-items: center;
                margin-bottom: .35rem;
                background: linear-gradient(135deg,#93c5fd,#c7d2fe);
                color: #0f172a;
                font-weight: 700;
                font-size: 1.25rem;
                box-shadow: 0 10px 22px rgba(15,23,42,.08);
            }

        /* البلاطات والإحصاءات */
        .hi-tile {
            display: flex;
            gap: .8rem;
            align-items: center;
            padding: .9rem .95rem;
            border: 1px solid #e7edf5;
            border-radius: 12px;
            background: linear-gradient(180deg,#ffffff,#fcfdff);
            transition: transform .15s ease, box-shadow .15s ease, border-color .15s ease;
        }

            .hi-tile i {
                color: #0d6efd;
                font-size: 1.2rem;
            }

            .hi-tile:hover {
                transform: translateY(-2px);
                border-color: #dbe7ff;
                box-shadow: 0 8px 18px rgba(13,110,253,.08);
            }

        .stat-number {
            font-weight: 700;
            font-size: 1.35rem;
        }

        .stat-label {
            color: #64748b;
            font-size: .85rem;
        }
    </style>
}
