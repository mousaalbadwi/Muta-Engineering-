@model MutaEngineering.Models.Exam
@{
    ViewData["Title"] = "Create Exam";
}

<div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="m-0">@ViewData["Title"]</h5>
        <a asp-area="Admin" asp-controller="Exams" asp-action="Index" class="btn btn-light">Back</a>
    </div>

    <form asp-area="Admin" asp-controller="Exams" asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
        <partial name="_Form" />
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save me-1"></i> Save</button>
            <a asp-area="Admin" asp-controller="Exams" asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        // Mirror EN -> AR for required Arabic fields
        (function () {
          const en = document.getElementById('fullNameEn');
          const ar = document.getElementById('fullNameAr');
          if (en && ar) {
            const sync = () => { ar.value = en.value; };
            en.addEventListener('input', sync);
            sync();
          }
        })();
    </script>
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}

