<style>
    .admin-topbar-wrap {
        padding: .75rem .75rem 0;
        position: sticky;
        top: 0;
        z-index: 1030;
    }

    .admin-topbar {
        --bg: rgba(255, 255, 255, 0.85);
        --bd: #e2e8f0;
        --shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        background: var(--bg);
        backdrop-filter: blur(12px) saturate(140%);
        -webkit-backdrop-filter: blur(12px) saturate(140%);
        border: 1px solid var(--bd);
        border-radius: 16px;
        box-shadow: var(--shadow);
        transition: all 0.25s ease-in-out;
    }

    .admin-title {
        letter-spacing: .3px;
        gap: .75rem;
    }

        .admin-title i {
            width: 42px;
            height: 42px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: #eff6ff;
            color: #0d6efd;
            font-size: 1.25rem;
            box-shadow: inset 0 0 0 1px #dbeafe;
        }

    .role-chip {
        background: #f1f5f9;
        color: #334155;
        border-radius: 999px;
        font-size: .78rem;
        padding: .4rem .8rem;
        font-weight: 500;
    }

    .topbar-divider {
        width: 1px;
        height: 32px;
        background: #e2e8f0;
        margin: 0 .75rem;
    }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 2px 6px rgba(0, 0, 0, .08);
        object-fit: cover;
        transition: transform 0.2s ease;
    }

        .avatar:hover {
            transform: scale(1.05);
        }

    .top-actions .btn {
        border-radius: 10px;
        font-weight: 500;
        padding: .4rem .8rem;
    }

    .btn-ghost {
        background: #ffffff;
        border: 1px solid #e2e8f0;
        color: #374151;
        transition: all 0.2s ease;
    }

        .btn-ghost:hover {
            background: #f9fafb;
            color: #111827;
        }

    .search-wrap {
        background: #fff;
        border: 1px solid #e2e8f0;
        border-radius: 14px;
        padding: .4rem .75rem;
        gap: .5rem;
        min-width: 260px;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
    }

        .search-wrap input {
            border: 0;
            outline: 0;
            width: 100%;
            background: transparent;
            font-size: 0.875rem;
            color: #111827;
        }

        .search-wrap i {
            color: #6b7280;
        }

    .dropdown-menu {
        border-radius: 14px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 8px 24px rgba(0, 0, 0, .08);
        font-size: 0.875rem;
        min-width: 220px;
    }

    .dropdown-item {
        border-radius: 8px;
        padding: .5rem .75rem;
        transition: background 0.15s ease;
    }

        .dropdown-item:hover,
        .dropdown-item:active {
            background: #f1f5f9;
        }

    /* Responsive */
    @@media (max-width: 575.98px) {
        .search-wrap

    {
        display: none;
    }

    .topbar-divider {
        display: none;
    }

    .admin-title h5 {
        font-size: 1rem;
    }

    .role-chip {
        display: none;
    }

    }
</style>


<div class="admin-topbar-wrap">
    <nav class="admin-topbar navbar navbar-expand px-3 py-2">
        <div class="container-fluid justify-content-between">

            <!-- Left: Title + Breadcrumb -->
            <div class="d-flex align-items-center gap-3">
                <div class="admin-title d-flex align-items-center">
                    <i class="fa-solid fa-chart-line"></i>
                    <div class="d-flex flex-column">
                        <h5 class="m-0 fw-semibold">Dashboard</h5>
                        <small class="text-muted">
                            <i class="fa-solid fa-house-chimney me-1"></i>
                            Admin / Dashboard
                        </small>
                    </div>
                </div>
            </div>

            <!-- Center: Search -->
            <div class="d-none d-md-flex align-items-center flex-grow-1 justify-content-center px-3">
                <div class="search-wrap d-flex align-items-center w-50">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" placeholder="Search…" aria-label="Search" />
                </div>
            </div>

            <!-- Right: Actions -->
            <div class="top-actions d-flex align-items-center gap-2">
                <!-- View Site -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-ghost btn-sm">
                    <i class="fa-solid fa-house me-2"></i> View Site
                </a>

                <!-- Notifications -->
                <button type="button" class="btn btn-ghost btn-sm position-relative" title="Notifications">
                    <i class="fa-regular fa-bell"></i>
                </button>

                <div class="topbar-divider d-none d-sm-block"></div>

                <!-- Role chip -->
                <span class="role-chip d-none d-sm-inline">Admin</span>

                <!-- Profile dropdown -->
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://ui-avatars.com/api/?name=Admin" alt="Admin Avatar" class="avatar">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end mt-2">
                        <li>
                            <h6 class="dropdown-header">
                                Signed in as<br />
                                <span class="fw-semibold">@User?.Identity?.Name ?? "admin@domain.com"</span>
                            </h6>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-regular fa-user me-2"></i> Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-gear me-2"></i> Settings</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="fa-solid fa-right-from-bracket me-2"></i> Logout</a></li>
                    </ul>
                </div>
            </div>

        </div>
    </nav>
</div>
