@model MutaEngineering.Models.NewsItem
@{
    ViewData["Title"] = "Edit News";
}

<div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="m-0">@ViewData["Title"]</h5>
        <a asp-area="Admin" asp-controller="News" asp-action="Index" class="btn btn-light">Back</a>
    </div>

    <form asp-area="Admin" asp-controller="News" asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
        <partial name="_Form" />
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save me-1"></i> Save Changes</button>
            <a asp-area="Admin" asp-controller="News" asp-action="Index" class="btn btn-light">Back</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
