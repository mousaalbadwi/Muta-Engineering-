@model IEnumerable<MutaEngineering.Models.NewsItem>

@{
    ViewData["Title"] = "News Management";
    var totalNews = Model.Count();
    var publishedNews = Model.Count(n => n.IsPublished);
    var draftNews = totalNews - publishedNews;
}

<style>
    :root {
        --admin-primary: #7a1e2d;
        --admin-bg: #f8f9fa;
        --glass-border: rgba(255, 255, 255, 0.6);
        --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    }

    .admin-container {
        padding: 2rem 0;
        background-color: var(--admin-bg);
        min-height: 85vh;
    }

    .page-header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .header-title h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
    }

    .header-title p {
        color: #64748b;
        margin: 0.25rem 0 0;
        font-size: 0.95rem;
    }

    /* Stats Cards */
    .stat-card-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: #fff;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        border: 1px solid #e2e8f0;
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        transition: transform 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-2px);
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: rgba(122, 30, 45, 0.1);
        color: var(--admin-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stat-info h3 {
        font-size: 1.8rem;
        font-weight: 700;
        color: #0f172a;
        margin: 0;
        line-height: 1.2;
    }

    .stat-info p {
        color: #64748b;
        font-size: 0.875rem;
        margin: 0;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Main Content Card */
    .content-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    .table-toolbar {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #f1f5f9;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .search-box {
        position: relative;
        min-width: 280px;
    }

    .search-box input {
        width: 100%;
        padding: 0.6rem 1rem 0.6rem 2.5rem;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 0.95rem;
        outline: none;
        transition: border-color 0.2s;
    }

    .search-box input:focus {
        border-color: var(--admin-primary);
        box-shadow: 0 0 0 3px rgba(122, 30, 45, 0.1);
    }

    .search-box i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
    }

    /* Table Styling */
    .modern-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .modern-table th {
        background: #f8fafc;
        padding: 1rem 1.5rem;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #64748b;
        border-bottom: 1px solid #e2e8f0;
        text-align: left;
    }

    .modern-table td {
        padding: 1rem 1.5rem;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 0.95rem;
        color: #334155;
    }

    .modern-table tr:last-child td {
        border-bottom: none;
    }

    .modern-table tr:hover td {
        background-color: #fcfcfc;
    }

    /* Badges */
    .badge-modern {
        padding: 0.35rem 0.75rem;
        border-radius: 99px;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.02em;
    }

    .badge-cat {
        background-color: #f5f3ff;
        color: #7c3aed;
        border: 1px solid #ddd6fe;
    }

    .badge-status-published {
        background-color: #f0fdf4;
        color: #16a34a;
        border: 1px solid #dcfce7;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
    }

    .badge-status-draft {
        background-color: #f8fafc;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

    .date-text {
        color: #0f172a;
        font-weight: 500;
        font-size: 0.9rem;
    }

    /* Action Buttons */
    .action-btn {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        color: #64748b;
        transition: all 0.2s;
        border: 1px solid transparent;
        background: transparent;
        text-decoration: none;
        cursor: pointer;
    }

    .action-btn:hover {
        background: #f1f5f9;
        color: #0f172a;
    }

    .action-btn.edit:hover {
        background: #eff6ff;
        color: #2563eb;
    }

    .action-btn.delete:hover {
        background: #fef2f2;
        color: #dc2626;
    }

    .btn-create {
        background: var(--admin-primary);
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s;
        border: none;
        text-decoration: none;
    }

    .btn-create:hover {
        background: #5f1623;
        transform: translateY(-1px);
        color: #fff;
    }

    /* Pagination */
    .pagination-wrapper {
        padding: 1rem 1.5rem;
        border-top: 1px solid #f1f5f9;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-btn {
        background: #fff;
        border: 1px solid #e2e8f0;
        color: #64748b;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .page-btn:hover:not(:disabled) {
        background: #f8fafc;
        color: #0f172a;
        border-color: #cbd5e1;
    }

    .page-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .page-info {
        font-size: 0.9rem;
        color: #64748b;
    }
</style>

<div class="admin-container">
    <div class="container-fluid px-lg-5">

        <!-- Header -->
        <div class="page-header">
            <div class="header-title">
                <h1>News & Updates</h1>
                <p>Manage university updates and announcements.</p>
            </div>
            <div>
                <a asp-action="Create" class="btn-create shadow-sm">
                    <i class="fa-solid fa-plus"></i>
                    <span>Add News</span>
                </a>
            </div>
        </div>

        <!-- Stats -->
        <div class="stat-card-row">
            <div class="stat-card">
                <div class="stat-info">
                    <h3>@totalNews</h3>
                    <p>Total Stories</p>
                </div>
                <div class="stat-icon">
                    <i class="fa-solid fa-newspaper"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-info">
                    <h3>@publishedNews</h3>
                    <p>Published</p>
                </div>
                <div class="stat-icon" style="background: rgba(22, 163, 74, 0.1); color: #16a34a;">
                    <i class="fa-solid fa-check"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-info">
                    <h3>@draftNews</h3>
                    <p>Drafts</p>
                </div>
                <div class="stat-icon" style="background: rgba(234, 179, 8, 0.1); color: #ca8a04;">
                    <i class="fa-solid fa-file-pen"></i>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="content-card">
            <!-- Toolbar -->
            <div class="table-toolbar">
                <div class="search-box">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" id="newsSearch" placeholder="Search headline..." onkeyup="filterTable()">
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-light text-secondary border-secondary-subtle btn-sm">
                        <i class="fa-solid fa-filter"></i> Filter
                    </button>
                    <button class="btn btn-outline-light text-secondary border-secondary-subtle btn-sm">
                        <i class="fa-solid fa-download"></i> Export
                    </button>
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="modern-table" id="newsTable">
                    <thead>
                        <tr>
                            <th>Headline</th>
                            <th>Category</th>
                            <th>Publish Date</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        @foreach (var n in Model)
                        {
                            <tr class="data-row">
                                <td>
                                    <strong>@n.TitleEn</strong>
                                </td>
                                <td>
                                    <span class="badge-modern badge-cat">@n.Category</span>
                                </td>
                                <td>
                                    <span class="date-text">@n.PublishDate.ToString("dd MMM yyyy")</span>
                                </td>
                                <td>
                                    @if (n.IsPublished)
                                    {
                                        <span class="badge-modern badge-status-published">
                                            <i class="fa-solid fa-circle-check"></i> Published
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-modern badge-status-draft">Draft</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@n.Id" class="action-btn edit" title="Edit">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@n.Id" class="action-btn" title="View Details">
                                        <i class="fa-regular fa-eye"></i>
                                    </a>
                                    <button type="button" class="action-btn delete" title="Delete"
                                        onclick="confirmDelete('@n.Id', '@n.TitleEn')">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>

                                    <form id="del-@n.Id" asp-action="Delete" method="post" style="display:none;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@n.Id" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <div class="mb-3 text-muted opacity-50">
                            <i class="fa-solid fa-newspaper" style="font-size: 3rem;"></i>
                        </div>
                        <h6 class="text-muted">No news articles found.</h6>
                        <a asp-action="Create" class="btn btn-sm btn-outline-primary mt-2">Publish News</a>
                    </div>
                }
            </div>

            <!-- Pagination Controls -->
            <div class="pagination-wrapper" id="paginationControls">
                <div class="page-info">
                    Showing <span id="startRow">0</span> to <span id="endRow">0</span> of <span id="totalRows">0</span>
                    entries
                </div>
                <div class="d-flex gap-2">
                    <button class="page-btn" id="prevBtn" onclick="changePage(-1)" disabled>Previous</button>
                    <button class="page-btn" id="nextBtn" onclick="changePage(1)">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(id, name) {
        Swal.fire({
            title: 'Delete Article?',
            text: `Are you sure you want to remove "${name}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc2626',
            cancelButtonColor: '#64748b',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById(`del-${id}`).submit();
            }
        })
    }

    function filterTable() {
        const input = document.getElementById("newsSearch");
        const filter = input.value.toUpperCase();
        const rows = document.querySelectorAll(".data-row");

        rows.forEach(row => {
            const text = row.innerText || row.textContent;
            if (text.toUpperCase().indexOf(filter) > -1) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });

        if (filter === "") {
            renderPagination();
        } else {
            document.getElementById("paginationControls").style.display = "none";
        }
    }

    const rowsPerPage = 6;
    let currentPage = 1;
    let rows = [];

    document.addEventListener("DOMContentLoaded", () => {
        const tbody = document.getElementById("tableBody");
        rows = Array.from(tbody.getElementsByClassName("data-row"));
        if (rows.length > 0) renderPagination();
        else document.getElementById("paginationControls").style.display = "none";
    });

    function renderPagination() {
        const totalPages = Math.ceil(rows.length / rowsPerPage);
        if (currentPage < 1) currentPage = 1;
        if (currentPage > totalPages) currentPage = totalPages;

        const start = (currentPage - 1) * rowsPerPage;
        const end = start + rowsPerPage;

        rows.forEach((row, index) => {
            if (index >= start && index < end) row.style.display = "";
            else row.style.display = "none";
        });

        document.getElementById("startRow").innerText = rows.length > 0 ? start + 1 : 0;
        document.getElementById("endRow").innerText = Math.min(end, rows.length);
        document.getElementById("totalRows").innerText = rows.length;
        document.getElementById("paginationControls").style.display = "flex";

        document.getElementById("prevBtn").disabled = currentPage === 1;
        document.getElementById("nextBtn").disabled = currentPage === totalPages || totalPages === 0;
    }

    function changePage(delta) {
        currentPage += delta;
        renderPagination();
    }
</script>
