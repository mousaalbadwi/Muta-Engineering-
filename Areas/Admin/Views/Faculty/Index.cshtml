@model IEnumerable<MutaEngineering.Models.FacultyMember>

<style>
    .faculty-admin .card {
        border: 1px solid #e9ecef;
        border-radius: 14px;
        box-shadow: 0 6px 22px rgba(16,24,40,.06);
        overflow: hidden;
    }

    .faculty-admin .card-header {
        background: linear-gradient(180deg,#f8fafc 0%,#f1f5f9 100%);
        border-bottom: 1px solid #e9ecef;
    }

    .faculty-admin .title-wrap h5 {
        font-weight: 700;
        letter-spacing: .2px;
    }

    .faculty-admin .btn-add {
        border-radius: 10px;
    }

    .faculty-admin .table thead th {
        font-size: .85rem;
        text-transform: uppercase;
        letter-spacing: .5px;
        color: #475569;
        white-space: nowrap;
        position: sticky;
        top: 0;
        z-index: 1;
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0 !important;
    }

    .faculty-admin .table tbody td {
        vertical-align: middle;
    }

    .faculty-admin .truncate {
        max-width: 340px;
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    @@media (max-width:1200px) {
        .faculty-admin .truncate

    {
        max-width: 240px;
    }

    }

    .faculty-admin .actions .btn {
        border-radius: 8px;
    }

    .faculty-admin .badge-soft {
        border-radius: 999px;
        font-weight: 600;
        background: #eef2ff;
        color: #3730a3;
        padding: .3rem .6rem;
    }
</style>

<div class="faculty-admin">
    <div class="card">
        <div class="card-header p-3 p-md-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="title-wrap d-flex align-items-center gap-2">
                    <i class="fa-solid fa-people-group text-primary"></i>
                    <h5 class="m-0">Faculty Members (Admin)</h5>
                </div>
                <a asp-area="Admin" asp-controller="Faculty" asp-action="Create"
                   class="btn btn-primary btn-sm btn-add">
                    <i class="fa fa-plus me-1"></i> Add Faculty
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name (EN)</th>
                            <th>Title</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Office</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in Model)
                        {
                            <tr>
                                <td>
                                    <span class="truncate" title="@f.FullNameEn">@f.FullNameEn</span>
                                </td>
                                <td>
                                    <span class="badge-soft" title="@f.TitleEn">@f.TitleEn</span>
                                </td>
                                <td>
                                    <span class="truncate" title="@f.Email">@f.Email</span>
                                </td>
                                <td>
                                    <span class="truncate" title="@f.Department?.NameEn">@f.Department?.NameEn</span>
                                </td>
                                <td>
                                    <span class="truncate" title="@f.Office">@f.Office</span>
                                </td>
                                <td class="text-end actions">
                                    <a asp-area="Admin" asp-controller="Faculty" asp-action="Edit" asp-route-id="@f.Id"
                                       class="btn btn-outline-secondary btn-sm me-1">
                                        <i class="fa-regular fa-pen-to-square me-1"></i> Edit
                                    </a>
                                    <a asp-area="Admin" asp-controller="Faculty" asp-action="Details" asp-route-id="@f.Id"
                                       class="btn btn-outline-info btn-sm me-1">
                                        <i class="fa-regular fa-eye me-1"></i> Details
                                    </a>
                                    <form id="del-@f.Id" asp-area="Admin" asp-controller="Faculty" asp-action="Delete" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@f.Id" />
                                        <button type="button" class="btn btn-outline-danger btn-sm js-delete"
                                                data-form="del-@f.Id" data-name="@f.FullNameEn">
                                            Delete
                                        </button>
                                    </form>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
