@model MutaEngineering.Models.Department

<div class="row g-3">
    <div class="col-md-4">
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="NameEn" class="form-label">Name (EN)</label>
        <input asp-for="NameEn" class="form-control" />
        <span asp-validation-for="NameEn" class="text-danger small"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="NameAr" class="form-label">Name (AR)</label>
        <input asp-for="NameAr" class="form-control" />
        <span asp-validation-for="NameAr" class="text-danger small"></span>
    </div>

    <div class="col-12">
        <label asp-for="DescriptionEn" class="form-label">Description (EN)</label>
        <textarea asp-for="DescriptionEn" rows="3" class="form-control"></textarea>
        <span asp-validation-for="DescriptionEn" class="text-danger small"></span>
    </div>

    <div class="col-12">
        <label asp-for="DescriptionAr" class="form-label">Description (AR)</label>
        <textarea asp-for="DescriptionAr" rows="3" class="form-control"></textarea>
        <span asp-validation-for="DescriptionAr" class="text-danger small"></span>
    </div>
</div>
