@model IEnumerable<MutaEngineering.Models.AcademicAlert>

<style>
    .alerts-admin .card {
        border: 1px solid #e9ecef;
        border-radius: 14px;
        box-shadow: 0 6px 22px rgba(16,24,40,.06);
    }

    .alerts-admin .card-header {
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        border-bottom: 1px solid #e9ecef;
        border-top-left-radius: 14px;
        border-top-right-radius: 14px;
    }

    .alerts-admin .title-wrap h5 {
        font-weight: 700;
        letter-spacing: .2px;
    }

    .alerts-admin .btn-add {
        border-radius: 10px;
    }

    .alerts-admin .table thead th {
        font-size: .85rem;
        text-transform: uppercase;
        letter-spacing: .5px;
        color: #475569;
        white-space: nowrap;
        position: sticky;
        top: 0;
        background: #f8fafc;
        z-index: 1;
        border-bottom: 1px solid #e2e8f0 !important;
    }

    .alerts-admin .table tbody td {
        vertical-align: middle;
    }

    .alerts-admin .truncate {
        max-width: 340px;
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    @@media (max-width: 992px) {
        .alerts-admin .truncate

    {
        max-width: 220px;
    }

    }

    .alerts-admin .actions .btn {
        border-radius: 8px;
    }

    .alerts-admin .badge {
        border-radius: 999px;
        font-weight: 600;
        letter-spacing: .2px;
    }
</style>

<div class="alerts-admin">
    <div class="card">
        <div class="card-header p-3 p-md-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="title-wrap d-flex align-items-center gap-2">
                    <i class="fa-solid fa-bell text-primary"></i>
                    <h5 class="m-0">Academic Alerts (Admin)</h5>
                </div>
                <a asp-area="Admin" asp-controller="Alerts" asp-action="Create"
                   class="btn btn-primary btn-sm btn-add">
                    <i class="fa fa-plus me-1"></i> Add Alert
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Title (EN)</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Department</th>
                            <th>Important</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td>
                                    <span class="truncate" title="@a.TitleEn">@a.TitleEn</span>
                                </td>
                                <td>@(a.Date?.ToString("dd MMM yyyy · HH:mm") ?? "-")</td>
                                <td><span class="truncate" title="@a.Location">@a.Location</span></td>
                                <td><span class="truncate" title="@a.Department?.NameEn">@a.Department?.NameEn</span></td>
                                <td>
                                    @if (a.IsImportant)
                                    {
                                        <span class="badge text-bg-danger"><i class="fa-solid fa-triangle-exclamation me-1"></i> Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge text-bg-secondary">No</span>
                                    }
                                </td>
                                <td class="text-end actions">
                                    <a asp-area="Admin" asp-controller="Alerts" asp-action="Details" asp-route-id="@a.Id"
                                       class="btn btn-outline-info btn-sm me-1">
                                        <i class="fa-regular fa-eye me-1"></i> Details
                                    </a>
                                    <a asp-area="Admin" asp-controller="Alerts" asp-action="Edit" asp-route-id="@a.Id"
                                       class="btn btn-outline-secondary btn-sm me-1">
                                        <i class="fa-regular fa-pen-to-square me-1"></i> Edit
                                    </a>
                                    <form id="del-@a.Id" asp-area="Admin" asp-controller="Alerts" asp-action="Delete" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@a.Id" />
                                        <button type="button" class="btn btn-outline-danger btn-sm js-delete"
                                                data-form="del-@a.Id" data-name="@a.TitleEn">
                                            Delete
                                        </button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
